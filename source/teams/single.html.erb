<div class="h5 mxn1">
  <%= link_to "Home", "../", class: "btn compact btn-link p1", title: "Home", :relative => false %>
  <span class="">
    <span class="muted"> / </span>
    <%= link_to "Teams", "./", class: "btn compact btn-link p1", title: "Teams", :relative => false %>
    <span class="muted"> / </span>
    <%= link_to team_info[:full_name], "#" , class: "btn compact btn-link p1", title: team_info[:full_name], :relative => false %>
  </span>
</div>

<div>
  <h1><%= team_info[:full_name] %></h1>

  <h2>Team Info</h2>
  <p>Team Alias: <%= team_info[:alias] %>
  <br>Location: <%= team_info[:city] %>
  <br>Country: <%= team_info[:country] %>
  <br>Year Founded: <%= team_info[:year] %></p>

  <h2>Roster</h2>
  <table>
    <thead>
      <th>Name</th>
      <th>Country<th>
    </thead>
    <tbody>
    <% roster.each do |player| %>
      <tr>
        <td><%= player.first_name + ' ' + player.last_name %></td>
        <td><%= player.country %></td>
      </tr>
    <% end %>
    <tbody>
    <tfoot>
      <tr>
        <td>Total:</td>
        <td><%= roster.count %></td>
      </tr>
    </tfoot>
  </table>
</div>
