<% content_for :title do %><%= team_info[:full_name] %><% end %>

<div class="h5 mxn1">
  <a href="../../" title="Home" class="btn compact btn-link p1">Home</a>
  <span class="">
    <span class="muted"> / </span>
    <a href="../" title="Teams" class="btn compact btn-link p1">Teams</a>
    <span class="muted"> / </span>
    <a href="#" title="<%= team_info[:full_name] %>"
      class="btn compact btn-link p1"> <%= team_info[:full_name] %> </a>
  </span>
</div>

<div>
  <h1><%= team_info[:full_name] %></h1>

  <h2>Team Info</h2>
  <p>Team Alias: <%= team_info[:alias] %>
  <br>Location: <%= team_info[:city] %>
  <br>Country: <%= team_info[:country] %>
  <br>Year Founded: <%= team_info[:year] %></p>

  <h2>Roster</h2>
  <table class="table-light overflow-hidden bg-white border rounded">
    <thead>
      <th>Name</th>
      <th>Country<th>
    </thead>
    <tbody>
    <% roster.each do |player| %>
      <tr>
        <td><%= player[:first_name] + ' ' + player[:last_name] %></td>
        <td><%= player[:country] %></td>
      </tr>
    <% end %>
    <tbody>
    <tfoot>
      <tr>
        <td><strong>Total Players<strong></td>
        <td><%= roster.count %></td>
      </tr>
    </tfoot>
  </table>
</div>
